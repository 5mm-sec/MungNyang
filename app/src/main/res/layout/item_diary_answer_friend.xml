<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/community_mainrectangle_shape"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/answerUserImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/defaultuserimage"/>

    <LinearLayout
        android:id="@+id/answerInfo"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"
            android:id="@+id/userNickNameText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center|left"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="닉네임"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/answerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="12dp"
            android:text="답변"/>
    </LinearLayout>



    <LinearLayout
        android:id="@+id/deleteAndTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/deleteAnswerBtn"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="13dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/delete"/>

        <TextView
            android:id="@+id/timeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center|bottom"
            android:layout_marginTop="1dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="10dp"
            android:text="시간"/>

    </LinearLayout>


</LinearLayout>