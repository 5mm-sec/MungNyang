<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout android:id="@+id/content_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout android:id="@+id/frame_124"
            android:layout_marginTop="0dp"
            android:layout_marginStart="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <View   android:id="@+id/rectangle_1"
                android:background="@drawable/savebutton_shape"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="410dp"
                android:layout_height="42dp" />

        </RelativeLayout>


        <RelativeLayout android:id="@+id/frame_123"
            android:layout_marginTop="5dp"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView android:id="@+id/back_imagebutton"
                android:src="@drawable/back_imagebutton"
                android:contentDescription="back_imagebutton"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_width="33dp"
                android:layout_height="34dp" />

        </RelativeLayout>

        <RelativeLayout android:id="@+id/frame_77"
            android:layout_marginTop="10dp"
            android:layout_marginStart="153dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView android:id="@+id/addFriendTitle"
                android:fontFamily="Inter"
                android:textSize="18sp"
                android:textColor="@color/_bg__frame_74_ek2_color"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="0dp"
                android:layout_width="95dp"
                android:layout_height="35dp"
                android:text="@string/addFriend_title_string"
                />

        </RelativeLayout>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:iconifiedByDefault="false"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_weight="1"
            android:id="@+id/recyclerUserList"
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="300dp" />

    </RelativeLayout>


</LinearLayout>